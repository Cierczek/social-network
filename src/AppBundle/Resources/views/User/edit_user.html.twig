{% extends "AppBundle:Layouts:layouts.html.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-11">
            {% for type, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ type }} fade in">
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <div class="box-form register col-lg-6">
        <h2>Mis Datos</h2>
        <hr/>
        {{form_start(form,{'action':'', 'method':'POST' })}}
        {{form_errors(form)}}
        {{form_end(form)}}
    </div>
{% endblock %}